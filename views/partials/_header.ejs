<head>
  <meta charset="utf-8">
  <title>TinyApp</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">

  <h2>TinyApp</h2>
  <% if (currentUser) { %>
    <table>
      <tr>
        <td>
          <p>Logged in as <%= currentUser.email %></p>
        </td>
        <td>
          <form method="POST" action="/logout">
            <button>LOGOUT</button>
          </form>
        </td>
      </tr>
    </table>
  <% } %>
</head>
