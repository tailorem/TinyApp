<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_header') %>

<body>
  <% if (message) { %>
    <p><%= message %></p>
  <% } %>
  <% if (currentUser) { %>
    <% if (urls.length >= 1) { %>
      <h4>Your Short URLs</h4>
    <% } %>
    <table>
      <% for(url in urls) { %>
        <tr>
          <td>
            <a href="<%= urls[url].longURL %>"><%= `${url}` %></a><%= ` â†’ ${urls[url].longURL}` %>
          </td>
          <td>
            <a href="/urls/<%= url %>">Edit</a>
            <form method="POST" action="/urls/<%= url %>/delete" style='display:inline;'>
              <button>DELETE</button>
            </form>
          </td>
        </tr>
      <% } %>
    </table>
    <p><a href="/urls/new">Add a short URL</a>!</p>
  <% } else {%>
  <p>Don't have an account? Please <a href="/register">register</a> first.</p>
  <% } %>
</body>
</html>